<style>
  .hero-inner {
    background: var(--color-bg-alt);
    padding: var(--space-3xl) 0 var(--space-2xl);
    text-align: center;
  }
  
  .hero-text {
    font-size: 1.25rem;
    color: var(--color-text-light);
    max-width: 500px;
    margin: var(--space-md) auto 0;
  }
  
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: var(--space-3xl);
  }
  
  .contact-options {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }
  
  .contact-card {
    background: var(--color-bg-alt);
    padding: var(--space-xl);
    border-radius: var(--radius-lg);
    text-align: center;
  }
  
  .contact-icon {
    font-size: 2.5rem;
    margin-bottom: var(--space-md);
  }
  
  .contact-card h3 { margin-bottom: var(--space-sm); }
  .contact-card p { color: var(--color-text-light); margin-bottom: var(--space-lg); }
  
  .contact-number {
    display: block;
    margin-top: var(--space-md);
    font-size: 0.875rem;
    color: var(--color-text-light);
  }
  
  .contact-form-wrapper h2 { margin-bottom: var(--space-sm); }
  .contact-form-wrapper > p { color: var(--color-text-light); margin-bottom: var(--space-xl); }
  
  .contact-form {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
  }
  
  .form-group.full-width {
    grid-column: 1 / -1;
  }
  
  .form-group label {
    font-weight: 500;
    margin-bottom: var(--space-sm);
  }
  
  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: var(--space-md);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    font-family: var(--font-primary);
    font-size: 1rem;
    transition: border-color var(--transition-fast);
  }
  
  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
  }
  
  .contact-form button {
    grid-column: 1 / -1;
    justify-self: start;
  }
  
  @media (max-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
    
    .contact-options {
      flex-direction: row;
      flex-wrap: wrap;
    }
    
    .contact-card {
      flex: 1 1 calc(50% - var(--space-md));
    }
  }
  
  @media (max-width: 640px) {
    .contact-options {
      flex-direction: column;
    }
    
    .contact-card {
      flex: 1 1 100%;
    }
    
    .contact-form {
      grid-template-columns: 1fr;
    }
  }
</style>
